generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          String   @default("CLIENT") // CLIENT, ADMIN, SUPER_ADMIN
  campusId      String?
  campus        Campus?  @relation(fields: [campusId], references: [id], onDelete: SetNull)
  accounts      Account[]
  sessions      Session[]
  comments      Comment[]
  requests      Request[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([email])
  @@index([campusId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Campus {
  id        String   @id @default(cuid())
  name      String
  address   String?
  city      String?
  province  String?
  users     User[]
  tefas     Tefa[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tefa {
  id          String    @id @default(cuid())
  name        String
  major       String
  description String?
  campusId    String
  campus      Campus    @relation(fields: [campusId], references: [id], onDelete: Cascade)
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([campusId])
  @@index([major])
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  stock       Int      @default(0)
  imageUrl    String?
  tefaId      String
  tefa        Tefa     @relation(fields: [tefaId], references: [id], onDelete: Cascade)
  requests    Request[]
  comment     Comment[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([tefaId])
  @@index([name])
}

model Request {
  id         String   @id @default(cuid())
  productId  String
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity   Int
  status     String   @default("pending") // pending, approved, rejected, completed
  notes      String?
  requestedBy String?
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([productId])
  @@index([userId])
  @@index([status])
}

model Comment {
  id String @id @default(cuid())
  content String 
  rating Int?
  images String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  productId String
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([userId])
}