generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          String    @default("CLIENT") // CLIENT, ADMIN, SUPER_ADMIN, INDUSTRI
  phoneNumber   String?
  address       String?
  city          String?
  province      String?
  campusId      String?
  campus        Campus?   @relation(fields: [campusId], references: [id], onDelete: SetNull)
  industryId    String?
  industry      Industry? @relation(fields: [industryId], references: [id], onDelete: SetNull)
  accounts      Account[]
  sessions      Session[]
  comments      Comment[]
  requests      Request[]
  bids          Bid[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([email])
  @@index([campusId])
  @@index([industryId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Campus {
  id        String   @id @default(cuid())
  name      String
  users     User[]
  tefas     Tefa[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tefa {
  id          String    @id @default(cuid())
  name        String
  major       String
  description String?
  campusId    String
  campus      Campus    @relation(fields: [campusId], references: [id], onDelete: Cascade)
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([campusId])
  @@index([major])
}

model Industry {
  id          String    @id @default(cuid())
  name        String
  description String?
  sector      String?
  status      String    @default("pending") // pending, approved, rejected
  verifiedAt  DateTime?
  users       User[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id          String    @id @default(cuid())
  name        String
  description String?
  price       Float
  stock       Int       @default(0)
  imageUrl    String?
  category    String?
  saleType    String? // auction, direct
  tefaId      String
  tefa        Tefa      @relation(fields: [tefaId], references: [id], onDelete: Cascade)
  requests    Request[]
  comment     Comment[]
  auctions    Auction[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([tefaId])
  @@index([name])
}

model Auction {
  id         String    @id @default(cuid())
  productId  String
  product    Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  startPrice Float
  currentBid Float     @default(0)
  startTime  DateTime
  endTime    DateTime
  status     String    @default("coming_soon") // coming soon, active, end, cancelled
  bids       Bid[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([productId])
  @@index([status])
}

model Bid {
  id        String   @id @default(cuid())
  amount    Float
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  auctionId String
  auction   Auction  @relation(fields: [auctionId], references: [id], onDelete: Cascade)
  status    String   @default("active") // active, accept, missed, cancelled
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([auctionId])
}

model Request {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity    Int      @default(1)
  status      String   @default("pending") // pending, approved, rejected, completed
  notes       String?
  requestedBy String?
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([productId])
  @@index([userId])
  @@index([status])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  rating    Int?
  images    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([userId])
}
