generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          String     @default("CLIENT") // CLIENT, ADMIN, SUPER_ADMIN, INDUSTRI
  status        String     @default("APPROVED") // APPROVED, PENDING, REJECTED - PENDING untuk INDUSTRI & ADMIN baru
  phoneNumber   String?
  address       String?
  city          String?
  province      String?
  campusId      String?
  campus        Campus?    @relation(fields: [campusId], references: [id], onDelete: SetNull)
  industryId    String?
  industry      Industry?  @relation(fields: [industryId], references: [id], onDelete: SetNull)
  accounts      Account[]
  sessions      Session[]
  comments      Comment[]
  wishlists     Wishlist[]
  bids          Bid[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  requests      Request[]

  @@index([email])
  @@index([campusId])
  @@index([industryId])
  @@index([status])
  @@index([role])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Campus {
  id          String   @id @default(cuid())
  name        String
  logo        String?
  image       String?
  description String?
  address     String?
  city        String?
  province    String?
  phoneNumber String?
  website     String?
  users       User[]
  tefas       Tefa[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  slug      String    @unique
  imageUrl  String?   // URL gambar kategori dari Cloudinary
  isPopular Boolean   @default(false) // Flag untuk kategori populer
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([slug])
  @@index([name])
  @@index([isPopular])
}

model Tefa {
  id          String    @id @default(cuid())
  name        String
  major       String
  description String?
  campusId    String
  campus      Campus    @relation(fields: [campusId], references: [id], onDelete: Cascade)
  slug        String?   @unique
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([campusId])
  @@index([major])
  @@index([name])
  @@index([slug])
}

model Industry {
  id          String    @id @default(cuid())
  name        String
  description String?
  sector      String?
  status      String    @default("pending") // pending, approved, rejected
  verifiedAt  DateTime?
  users       User[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id          String     @id @default(cuid())
  name        String
  slug        String     @unique
  description String?
  price       Float
  isAvailable String     @default("Tersedia") // Tersedia, Tidak Tersedia
  imageUrl    String?
  categoryId  String?
  category    Category?  @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  saleType    String? // auction, direct
  tefaId      String
  tefa        Tefa       @relation(fields: [tefaId], references: [id], onDelete: Cascade)
  comment     Comment[]
  auctions    Auction[]
  wishlists   Wishlist[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime  @updatedAt
  requests    Request[]

  @@index([tefaId])
  @@index([name])
  @@index([slug])
  @@index([categoryId])
  @@index([isAvailable, name])
}

model Request {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  clientName  String
  clientEmail String
  quantity    Int      @default(1)
  type        String   @default("PURCHASE_ORDER") // PURCHASE_ORDER, INVESTMENT
  status      String   @default("PENDING") // PENDING, APPROVED, REJECTED
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
  @@index([productId])
  @@index([userId])
}

model Auction {
  id         String   @id @default(cuid())
  productId  String
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  startPrice Float
  currentBid Float    @default(0)
  startTime  DateTime
  endTime    DateTime
  status     String   @default("coming_soon") // coming soon, active, end, cancelled
  bids       Bid[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([productId])
  @@index([status])
}

model Bid {
  id        String   @id @default(cuid())
  amount    Float
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  auctionId String
  auction   Auction  @relation(fields: [auctionId], references: [id], onDelete: Cascade)
  status    String   @default("active") // active, accept, missed, cancelled
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([auctionId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  rating    Int?
  images    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([userId])
}

model Wishlist {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
}