generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  SUPER_ADMIN
  ADMIN
  CLIENT
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          Role     @default(CLIENT)
  campusId      String?
  campus        Campus?  @relation(fields: [campusId], references: [id])
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Campus {
  id          String   @id @default(cuid())
  name        String
  location    String?
  description String?
  users       User[]
  tefas       Tefa[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Tefa {
  id          String    @id @default(cuid())
  name        String
  major       String    // Jurusan
  description String?
  campusId    String
  campus      Campus    @relation(fields: [campusId], references: [id], onDelete: Cascade)
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id          String    @id @default(cuid())
  name        String
  description String?
  price       Float
  stock       Int       @default(0)
  image       String?
  tefaId      String
  tefa        Tefa      @relation(fields: [tefaId], references: [id], onDelete: Cascade)
  requests    Request[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum RequestType {
  PURCHASE_ORDER
  INVESTMENT
}

model Request {
  id          String        @id @default(cuid())
  productId   String
  product     Product       @relation(fields: [productId], references: [id], onDelete: Cascade)
  clientName  String
  clientEmail String
  quantity    Int
  type        RequestType
  status      RequestStatus @default(PENDING)
  notes       String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
